<html>
<head>
<title>Demo Chat</title>
<script src="jquery.js"></script>
<script src="xuly.js"></script>
<script src="socket.io/socket.io.js"></script>
<link rel="stylesheet" type="text/css" href="style.css">
<script>

// goi dien len server
var socket = io("http://localhost:3000");

$(document).ready(function(){
  $("#mrA").Click({function(){
      socket.emit("Client-send-data","HELLO");
  });
});
</script>
</head>

<body>
<div id="wrapper">
	<div id="loginForm">
		<h3>What's your name?</h3>
		<input type="text"  id="txtUsername">
		<input type="button" value="Register" id="btnRegister">
	</div>
	<div id="chatForm">
		<div id="left">
			<div id="boxTitle">User Online</div>
			<div id="boxContent">
				<div class=""></div>
			</div>
		</div>
		<div id="right">
			<div id="sayHi">
				Hello <span id="currentUser"></span>
				<input type="button" id="btnLogout" value="Logout">
			</div>
			<div id="listMessage"></div>
			<input type="text" name="txtMessage" id="txtMessage"><input id="btnSendMessage" name="btnSendMessage" type="button" value="Send">
		</div>
	</div>
</div>
</body>
</html>
